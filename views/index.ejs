<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <div class="row" id="loginSection">
      <form class="offset-4 col-4">
        <div class="form-group">
          <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter your display name">
        </div>
        <button type="button" class="btn btn-primary btn-block col-12 mt-2" id="loginBtn">Login</button>
      </form>
    </div>



    <div class="row" id="chatSection">
      <div class="col-8" id="chatBox">
        <div class="col-12" id="messageBox">

        </div>
        <div class="col-12" id="chatBar">
          <form class="col-12">
            <div class="input-group mb-3">
              <input type="text" id="message" class="form-control" placeholder="Enter your message" aria-label="Recipient's username" aria-describedby="basic-addon2">
              <div class="input-group-append">
                <button class="btn btn-outline-primary" type="button" id="sendBtn">Send</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-4">
        <div>
          online users
        </div>
        <ul id="onlineUsersList">
          
        </ul>
      </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="/javascripts/index.js"></script>
  </body>
</html>




